@@ -22,7 +22,7 @@
 #======================= Global Settings =====================================
 [global]
 
-# workgroup = NT-Domain-Name or Workgroup-Name, eg: MIDEARTH
+# workgroup = NT-Domain-Name or Workgroup-Name, eg: LINUX2
