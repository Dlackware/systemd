CFLAGS=$SLKCFLAGS \
CXXFLAGS=$SLKCFLAGS \
./configure \
  --prefix=/usr \
  --libdir=/usr/lib${LIBDIRSUFFIX} \
  --sysconfdir=/etc \
  --localstatedir=/var \
  --infodir=/usr/info \
  --mandir=/usr/man \
  --disable-static \
  --with-hal-bin-dir=none \
  --with-hal-callouts-dir=none \
  --with-hal-fdi-dir=none \
  --build=$ARCH-slackware-linux
